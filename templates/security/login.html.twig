{% extends 'security/base.html.twig' %}

{% block body %}
	<div class="form-screen">
		<a href="{{ path('app_project_index') }}" class="easion-logo">
			<span>Project Management</span>
		</a>
		<div class="card account-dialog">
			<div class="card-header bg-primary text-white">Please sign in</div>
			<div class="card-body">
				<form action="{{ path('app_login') }}" method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<div class="form-group">
						<span class="bi bi-person-fill"></span>
						<input type="text" class="form-control" name="username" value="{{ last_username }}" placeholder="Username" required>
					</div>
					<div class="form-group">
						<span class="bi bi-lock-fill"></span>
						<input type="password" class="form-control" name="password" placeholder="Password" required>
					</div>
					<div class="form-group">
						<div class="custom-control custom-checkbox">
							<input type="checkbox" class="custom-control-input" id="customCheck1">
							<label class="custom-control-label" for="customCheck1">Remember me</label>
						</div>
					</div>
					<div class="account-dialog-actions">
						<button type="submit" class="btn btn-primary">Sign in</button>
						<a class="account-dialog-link" href="{{ path('app_registration') }}">Create a new account</a>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</form>
			</div>
		</div>
	</div>
{% endblock %}
