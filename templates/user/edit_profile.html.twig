{% extends 'project/base.html.twig' %}

{% block title %}Edit Profile
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card bg-light">
			<article class="card-body">
				<h4 class="card-title mt-3 text-center">Edit Project</h4>

				{{ form_start(form) }}
				{{ form_widget(form) }}
				<div class="row justify-content-center mt-4">
					<div class="col-auto">
						<button type="submit" class="btn btn-primary btn-lg">{{ button_label|default('Save') }}</button>
					</div>
				</div>
				{{ form_end(form) }}
			</article>
		</div>
	</div>
{% endblock %}
